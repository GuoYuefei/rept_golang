<div class=" col-md-offset-0 ">
			<!-- 按钮触发模态框 手机和平板不显示
			<button class="btn btn-info btn-sm hidden-sm hidden-xs" data-toggle="modal"
				data-target="#myModal">登录</button>
			-->
			<!-- 模态框（Modal） -->
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
				aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal"
								aria-hidden="true">&times;</button>
							<h4 class="modal-title" id="myModalLabel">后台登录</h4>
						</div>
						<div class="modal-body">
							<div class="container">
								<div class="row clearfix">
									<div class="col-md-4 column">
										<form class="form-horizontal" role="form" method="post"
											action="/Login">
											<div class="form-group">
												<label for="inputUsername3" class="col-sm-3 control-label">Username:</label>
												<div class="col-sm-9">
													<input type="text" class="form-control" id="inputUsername3"
														name="username" />
												</div>
											</div>
											<div class="form-group">
												<label for="inputPassword3" class="col-sm-3 control-label">Password:</label>
												<div class="col-sm-9">
													<input type="password" class="form-control" name="passwd"
														id="inputPassword3" />
												</div>
											</div>
											<div class="form-group">
												<label for="time" class="col-sm-3 control-label">有效期：</label> 
												<div class="col-sm-9">
													<select id="time" class="form-control" name="time">
														<option value="1h">1小时</option>
														<option value="1d">1天</option>
														<option value="1w">1星期</option>
														<option value="1m">1个月</option>
													</select>
												</div>
											</div>
											<div class="modal-footer">

												<button type="button" class="btn btn-default"
													data-dismiss="modal">关闭</button>
												<button type="submit" class="btn btn-primary">Sign
													in</button>
											</div>
										</form>


									</div>
								</div>
							</div>
						</div>

					</div>
					<!-- /.modal-content -->
				</div>
				<!-- /.modal -->
			</div>
		</div>
    
    
    
    
